import kareltherobot.*;

public class Runner implements Directions {

	public static void main(String[] args) {
		
		World.setVisible(true);
		World.readWorld("fieldExampleWorld.kwld");
		World.setDelay(15);
		
		Harvester johnny = new Harvester(2, 2, East, 0);
		Harvester phil = new Harvester(4, 2, East, 0);
		Harvester dianna = new Harvester(6, 2, East, 0);
		
		johnny.pickTwoRows();
		johnny.turnOff();
		
		phil.pickTwoRows();
		phil.turnOff();
		
		dianna.pickTwoRows();
		dianna.turnOff();
		
	}

}
