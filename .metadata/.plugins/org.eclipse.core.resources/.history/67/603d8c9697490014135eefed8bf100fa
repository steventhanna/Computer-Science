import kareltherobot.*;

public class Tester extends BeeperLayer {

	public Tester(int street, int avenue, Direction direction, int beepers) {
		super(street, avenue, direction, beepers);
		// TODO Auto-generated constructor stub
	}
	
	private OneLayer bill = new OneLayer(1,1,North, infinity);
	private TwoLayer john = new TwoLayer(1,2,North,infinity);
	private TwoLayer jose = new TwoLayer(1,5,North,infinity);
	private ThreeLayer mark = new ThreeLayer(1,7,North,infinity);
	
	private void getToWork() {
		bill.layBeeper();
		john.twoRows();
		mark.threeRows();
	}
	
	
	public static void main(String[] args) {
		World.setVisible(true);
		World.setSize(10,10);
		
		
	}
	
	
	
}
